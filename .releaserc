{
	"branches": ["main"],
	"plugins": [
		[
			"@semantic-release/commit-analyzer",
			{
				"preset": "angular",
				"releaseRules": [
					{"breaking": true, "release": "minor"},
					{"revert": true, "release": "patch"},
					{"type": "feat", "release": "minor"},
					{"type": "patch", "release": "minor"},
					{"type": "fix", "release": "patch"},
					{"type": "perf", "release": "patch"},
					{"type": "refactor", "release": "patch"},
					{"type": "docs", "release": "patch"},
					{"type": "chore", "release": "patch"}
				]
			}
		],
		[
			"@semantic-release/release-notes-generator",
			{
				"preset": "conventionalcommits",
				"presetConfig": {
					"types": [
						{"type": "feat", "section": ":sparkles: Features", "hidden": false},
						{"type": "fix", "section": ":bug: Bug Fixes", "hidden": false},
						{"type": "perf", "section": ":zap: Performance", "hidden": false},
						{"type": "refactor", "section": ":hammer: Code Refactoring", "hidden": false},
						{"type": "docs", "section": ":book: Documentation", "hidden": false},
						{"type": "chore", "section": ":repeat: Maintenance", "hidden": false},
						{"type": "revert", "section": ":rewind: Reverts", "hidden": false},
						{"type": "test", "section": ":test_tube: Tests", "hidden": false},
						{"type": "build", "section": ":building_construction: Build System", "hidden": false},
						{"type": "ci", "section": ":wrench: CI", "hidden": false}
					]
				}
			}
		],
		[
			"@semantic-release/exec", {
				"prepareCmd": "echo 'Preparing new version: ${nextRelease.version}' && sed -ir -E \"s/__version__ = \\\"[0-9]+\\.[0-9]+\\.[0-9]+\\\"/__version__ = \\\"${nextRelease.version}\\\"/\" amazing_app/__init__.py"
			}
		],
		[
			"@semantic-release/git",
			{
				"assets": ["amazing_app/__init__.py"],
				"message": "chore(release): Bump to Version ${nextRelease.version}\n\n${nextRelease.notes}"
			}
		],
		"@semantic-release/github"
		
	]
}